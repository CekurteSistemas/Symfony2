{% extends 'CekurteGeneratorBundle::layout.html.twig' %}

{% set title    = 'Author'|trans %}
{% set subtitle = 'List'|trans %}

{% block search -%}

{% endblock %}

{% block links -%}

{% endblock %}

{% block links_footer -%}
    {{ knp_pagination_render(pagination) }}
{% endblock %}

{% block content -%}
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th{% if pagination.isSorted('ck.id') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Name'|trans, 'ck.id', {'title' : 'Order by'|trans ~ ' ' ~ 'Name'|trans}) }}</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in pagination %}
                <tr>
                    <td>{{ entity.id }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
